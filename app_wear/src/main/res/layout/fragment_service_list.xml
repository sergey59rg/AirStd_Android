<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#131313"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLeftGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLeftGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLeftGuideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLeftGuideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalLeftGuideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ImageButton android:layout_width="9dp" android:layout_height="9dp"
        android:layout_marginEnd="152dp"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline4"
        app:layout_constraintEnd_toStartOf="@+id/verticalLeftGuideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        android:background="#FF0000"
        android:id="@+id/connected_indicator"
        android:layout_marginTop="32dp"/>

    <Button android:layout_width="20dp" android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline4"
        app:layout_constraintEnd_toStartOf="@+id/verticalLeftGuideline4"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        android:id="@+id/connected_indicator_btn"
        android:background="@drawable/setings_img"
        android:layout_marginTop="24dp" android:layout_marginEnd="28dp"/>

    <!-- all -->
    <Button android:layout_width="38dp" android:layout_height="55dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/cbtn_allp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_up"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline2"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline2"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"/>

    <TextView android:id="@+id/txt_name1"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="All"
        android:textColor="#7e7e7e"
        android:gravity="top|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline2"/>

    <ImageView android:layout_width="0dp" android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/cbtn_allp"
        app:layout_constraintBottom_toBottomOf="@+id/cbtn_allm"
        app:layout_constraintEnd_toEndOf="@+id/cbtn_allp"
        app:layout_constraintStart_toStartOf="@+id/cbtn_allp"
        android:layout_margin="0dp"
        android:background="@drawable/button_background" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" android:id="@+id/imageView1"/>

    <Button android:layout_width="38dp" android:layout_height="55dp"
        android:id="@+id/cbtn_allm"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:background="@drawable/button_down"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline2"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline2"/>

    <!-- front -->
    <Button android:layout_width="38dp" android:layout_height="55dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/cbtn_frontp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_up"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline5"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline5"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"/>

    <TextView android:id="@+id/txt_name2"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="Front"
        android:textColor="#7e7e7e"
        android:gravity="top|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline5"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline5"/>

    <ImageView android:layout_width="0dp" android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/cbtn_frontp"
        app:layout_constraintBottom_toBottomOf="@+id/cbtn_frontm"
        app:layout_constraintEnd_toEndOf="@+id/cbtn_frontp"
        app:layout_constraintStart_toStartOf="@+id/cbtn_frontp"
        android:layout_margin="0dp"
        android:background="@drawable/button_background" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" android:id="@+id/imageView2"/>

    <Button android:layout_width="38dp" android:layout_height="55dp"
        android:id="@+id/cbtn_frontm"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:background="@drawable/button_down"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline5"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline5"/>

    <!-- rear -->
    <Button android:layout_width="38dp" android:layout_height="55dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/cbtn_rearp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_up"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline3"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline3"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"/>

    <TextView android:id="@+id/txt_name3"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="Rear"
        android:textColor="#7e7e7e"
        android:gravity="top|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline3"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline3"/>

    <ImageView android:layout_width="0dp" android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/cbtn_rearp"
        app:layout_constraintBottom_toBottomOf="@+id/cbtn_rearm"
        app:layout_constraintEnd_toEndOf="@+id/cbtn_rearp"
        app:layout_constraintStart_toStartOf="@+id/cbtn_rearp"
        android:layout_margin="0dp"
        android:background="@drawable/button_background" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" android:id="@+id/imageView3"/>

    <Button android:layout_width="38dp" android:layout_height="55dp"
        android:id="@+id/cbtn_rearm"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:background="@drawable/button_down"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="@+id/verticalLeftGuideline3"
        app:layout_constraintStart_toStartOf="@+id/verticalLeftGuideline3"/>


</androidx.constraintlayout.widget.ConstraintLayout>